<div style="width: 340px; margin: 50px auto;">
    <form method="post" style="margin-bottom: 15px; background: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); padding: 30px;">
        <h2 class="text-center" style="margin: 0 0 15px;">Register</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" required="required" name="email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" style="min-height: 38px; border-radius: 2px; font-size: 15px; font-weight: bold;">Register</button>
        </div>
        {{#if error}}
            <div class="alert alert-warning" role="alert">
                {{error}}
            </div>
        {{/if}}
    </form>
    <p class="text-center"><a href="/login">Sign In</a></p>
</div>
